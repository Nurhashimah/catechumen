<div class="box">
	<div class="box-head">
		<h2 class="left"><%= t 'menu.address_book' %></h2>
	</div>
</div>

<div class="toolbar">
	<table style="width:75%;">
		<tr>
			<td width=200px><p><%= link_to image_tag("add.png", :border => 0, :title => 'New Travel Request') + (t 'new'), new_address_book_path %></p></td>
			<td><%= link_to 'ALL', address_books_path %></td>
			<% alphatab = Array('A' .. 'Z') %>
			<% alphatab.each do |alphatab| %>
			  <% add_exist = AddressBook.count(:all, :conditions => ['name ILIKE ?', "#{alphatab}%"]) %>
			  <% if add_exist < 1 %>
					<td><%= alphatab %></td>
				<% else %>
					<td><%= link_to "#{alphatab}", :action => "index", :search => "#{alphatab}" %></td>
				<% end %>
			<% end %>
		</tr></table>
		<p>
</div>

<div class="indextable">
	<table>
		<tr>
	    <th><%= t 'name' %></th>
	    <th><%= t 'staff.phone' %></th>
	    <th>Fax</th>
	    <th><%= t 'staff.address' %></th>
	    <th><%= t 'addressbook.mail' %></th>
	    <th>Web</th>
	    <th colspan=3 class="ac"><%= t 'control' %></th>
  </tr>
	<% @address_books.each do |address_book| %>
  <tr>
    <td><%=h address_book.name %></td>
    <td><%=h address_book.phone %></td>
    <td><%=h address_book.fax %></td>
    <td><%=h address_book.address %></td>
    <td><%=h address_book.mail %></td>
    <td><%=h address_book.web %></td>

    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => address_book %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => address_book %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), address_book, :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to (t 'addressbook.new_contact'), new_address_book_path %>

</div>