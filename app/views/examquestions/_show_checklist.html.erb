<fieldset>
	<legend class="togvis"><%=t('examquestion.edit_details')%> : <%=h @examquestion.qstatus %> </legend>
	<table>
		<tr>
			<td class="leftcol"><label for="editor_id"><b><%=t('examquestion.editor_id')%>:</b></label></td>
			<td><%=h @examquestion.editor_details %></td>
		</tr>
		<tr>
			<td colspan=2 class="leftcol"><%=t('examquestion.checklist')%> :</td>
		<tr>
			<td colspan=2 align=right >
							<table id="subtable">
								<thead>
									<tr>
										<th colspan=3 align=center><b><%=t('examquestion.conformity')%></th>
										<th colspan=3 align=center><b><%=t('examquestion.accuracy')%></th>
										<th colspan=3 align=center><b><%=t('examquestion.fit')%></th>
									</tr>
									</thead>
									<tbody>
									<tr>
										<td align=center style="font-size:80%"><%=t('examquestion.conform_curriculum')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.conform_specification')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.conform_opportunity')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.accuracy_construct')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.accuracy_topic')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.accuracy_component')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.fit_difficulty')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.fit_important')%></td>
										<td align=center style="font-size:80%"><%=t('examquestion.fit_fairness')%></td>
									</tr>
									<tr>
										<td align=center><%=@examquestion.conform_curriculum%><%=h @examquestion.conform_curriculum? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.conform_specification? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.conform_opportunity? ? image_tag("tick.png") : image_tag("cross.png") %> </td> 
										<td align=center><%=h @examquestion.accuracy_construct? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.accuracy_topic? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.accuracy_component? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.fit_difficulty? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.fit_important? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
										<td align=center><%=h @examquestion.fit_fairness? ? image_tag("tick.png") : image_tag("cross.png") %> </td>
									</tr>
								</tbody>
							</table>
			</td>
		</tr>
		<tr>
		 <td class="leftcol"><label for="editdt"><b><%=t('examquestion.editdt')%>:</b></label></td>
			<td><%=h l(@examquestion.editdt) unless @examquestion.editdt.blank? %></td>
		</tr>
	</table>
</fieldset>