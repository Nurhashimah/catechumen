<% form_for(@asset_loan) do |f| %>
  <%= f.error_messages %>


	<%= f.hidden_field :asset_id %>
	<%= f.hidden_field :staff_id, :value => Login.current_login.staff_id %>
	<div class="tform">
		<H2><%=t('assetloan.new')%></H2>
		<%= render :partial => 'form', :locals => {:f => f} %>
  </div>
  <p>
    <%= f.submit (t 'create') %>
  </p>
<% end %>

<%= link_to (t 'back'), asset_loans_path %>