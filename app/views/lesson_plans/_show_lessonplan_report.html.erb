<fieldset>
	<legend class='togvis'><%= t('lesson_plan.lesson_report')%></legend>
	<table width=85% >
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.location')%></label></td>
			<td><%=@lesson_plan.schedule_item.location_desc %><%#=h @lesson_plan.schedule_item.weeklytimetable_location.name %></td>				
		</tr>
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.total_absent')%></label></td>
			<td><%=h @lesson_plan.total_absent%></td>				
		</tr>
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.class_condition')%></label></td>
			<td>
				<SPAN  id="span_hod_endorse" style="display: none;"></SPAN>
				<%=h @lesson_plan.condition_isgood? ? t('lesson_plan.satisfactory') : t('lesson_plan.not_satisfactory') %>
			</td>				
		</tr>
		<tr>
			<td class="leftcol"><%=t('lesson_plan.condition_desc')%></td>
			<td><%=h @lesson_plan.condition_isnotgood? ? simple_format(@lesson_plan.condition_desc) : "-" %></td>
		</tr>
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.training_aids')%></label></td>
			<td><%= @lesson_plan.training_aids %></td>				
		</tr>
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.summary')%></label></td>
			<td><%= @lesson_plan.summary %></td>				
		</tr>
		<tr>
			<td class="leftcol"><label><%=t('lesson_plan.report_summary')%></label></td>
			<td><%= @lesson_plan.report_summary? ? @lesson_plan.report_summary : t('lesson_plan.awaiting_review') %></td>				
		</tr>
	</table>
</fieldset>