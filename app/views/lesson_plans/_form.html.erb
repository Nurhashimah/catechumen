						<%arr2 << "<option value='#{@lesson_plan.schedule}' data='#{@lesson_plan.schedule_item.location_desc}' selected='selected'>#{@lesson_plan.schedule_item.day_time_slot3}</option>" %>
						
					<% end %>
				<% end %>
				 <% @current_roles = Login.current_login.roles.map(&:name) %>
				<% if @current_roles.include?('Administration') %>
					 <!--admin-->
					 <% @lessonplan_schedule = LessonPlan.all.map(&:schedule).uniq.compact %>
					 <% alltimetables = WeeklytimetableDetail.find(:all, :conditions => ['id NOT IN(?)', schedule_approved_plan]).sort_by{|x|x.weeklytimetable_lecturer.name}%>
				<% else %>
					<!--lecturer-->
					<% timetableids = Login.current_login.timetables_of_programme%>
					<% if @lesson_plan && !@lesson_plan.schedule %><!--lesson_plan : schedule not exist-->
						<% @lessonplan_schedule = LessonPlan.all.map(&:schedule).uniq.compact %>
						<%# alltimetables = WeeklytimetableDetail.find(:all, :conditions=>['lecturer_id=? AND id NOT IN (?) AND id IN(?) and id NOT IN(?)',Login.current_login.staff_id,@lessonplan_schedule, timetableids, schedule_approved_plan]) %>
						<% alltimetables = WeeklytimetableDetail.find(:all, :conditions=>['lecturer_id=? AND id IN(?) AND id NOT IN(?)',Login.current_login.staff_id, timetableids, schedule_approved_plan]) %>
						<% unless @lesson_plan.new_record? %>
							<% alltimetables << @lesson_plan.schedule if @lesson_plan.schedule %>
					        <% end %>
					<% else %>
						<!--note : selected item remove fr this options to avoid redundant, as it already added at line 6-->
						<% alltimetables = WeeklytimetableDetail.find(:all, :conditions=>['lecturer_id=? and id IN(?) AND id NOT IN (?) AND id NOT IN(?)',Login.current_login.staff_id, timetableids, @lesson_plan.schedule, schedule_approved_plan]) %>
					<% end %>
				<% end %>
				<% if alltimetables%>
					 <% alltimetables.each do |c| %>
						<% arr2 << "<option value='#{c.id}' data='#{c.location_desc}'>#{c.day_time_slot3}</option>" %>
					<% end %>
				<% end %>
				<%= select_tag("lesson_plan[schedule]", arr2) %>
			</td>		
		</tr>
