  //required for first newly added (FIRST item only...) to works?
  $j(document).ready(function(){
    
    //alert("hmmm?");
    var theval1 = "<%=escape_javascript(@object_index_id) %>";
      
    var qty1 = $j("#stationery_stationery_adds_attributes_"+theval1+"_quantity").val();
