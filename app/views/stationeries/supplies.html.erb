<%= stylesheet_link_tag 'report' %>

<form action="#">
	<script>
	document.write("<input type='button' " +
	"onClick='window.print()' " +
	"class='printbutton' " +
	"value='<%=escape_javascript(t 'print')%>'/>");
	</script>
<form>

<div id="hideLink">
<%= link_to (t 'back'), stationeries_path %>
</div><br>

<div class="A4potrait">

<!-- Box Head -->
<div id="kewpa">
	<p class="marginright" align="right"></p>
	<br><br>
	<H4 align="center" style="font-size:16px;font-weight:bold;font-family:arial;">
		OFFICE SUPPLIES
	</H4>
<BR>

<table width=90% cellpadding=0 cellspacing=0>

	<tr>
		<td class="leftcol" style="font-size:14px;font-weight:bold;font-family:arial;">
			<label for="supplycode"><%= t 'stationery.code' %> :</label></td>
		<td colspan=3 style="font-size:14px;font-family:arial;"><%=h @stationery.code %></td>
	</tr>

	<tr>
		<td class="leftcol" style="font-size:14px;font-weight:bold;font-family:arial;">
			<label for="category"><%= t 'supplier.category' %> :</label></td>
		<td colspan=3 style="font-size:14px;font-family:arial;"><%=h @stationery.category %></td>
	</tr>

	<tr>
		<td class="leftcol" style="font-size:14px;font-weight:bold;font-family:arial;">
			<label for="maxquantity"><%= t 'supplier.current'%> :</label></td>
		<td colspan=3 style="font-size:14px;font-family:arial;"><%=h @stationery.current_quantity %>&nbsp;<%=h @stationery.unittype %></td>
	</tr>

	<tr>
		<td class="leftcol" style="font-size:14px;font-weight:bold;font-family:arial;">
			<label for="maxquantity"><%= t 'supplier.maxquantity'%> :</label></td>
		<td colspan=3 style="font-size:14px;font-family:arial;"><%=h @stationery.maxquantity %><%=h @stationery.unittype %></td>
	</tr>

	<tr>
		<td class="leftcol" style="font-size:14px;font-weight:bold;font-family:arial;">
			<label for="minquantity"><%= t 'supplier.minquantity' %> :</label></td>
		<td colspan=3 style="font-size:14px;font-family:arial;"><%=h @stationery.minquantity %><%=h @stationery.unittype %></td>
	</tr>
	<tr><td colspan=4 height=50px>&nbsp;</tr>
	<tr><td colspan=4 style="font-size:14px;font-weight:bold;font-family:arial;">ADDITIONS</td></tr>
	<tr>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">LPO No</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Supplier Name</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Quantity</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Price per Unit</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Total</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Received Date</td>
	</tr>
<% for stationery_add in @stationery.stationery_adds%>
  	<tr>
		<td><%= stationery_add.lpono %></td>
		<td><%= stationery_add.document %></td>
		<td><%= stationery_add.quantity %></td>
		<td><%= ringgols(stationery_add.unitcost) %></td>
		<td><%= ringgols(stationery_add.line_item_value) %></td>
		<td><%= stationery_add.received? ? stationery_add.received.strftime("%d %b %Y") : "-" %></td>
	</tr>
<% end %>
	<tr><td colspan=4 height=100px></tr>
	<tr><td colspan=4 style="font-size:14px;font-weight:bold;font-family:arial;">DEDUCTIONS</td></tr>
	<tr>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Issues By</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Received By</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Quantity</td>
		<td style="font-size:14px;font-weight:bold;font-family:arial;border-bottom:solid 1px;border-top:solid 1px;">Issue Date</td>
	</tr>

	<% for stationery_use in @stationery.stationery_uses %>
		<tr>
			<td><%= stationery_use.issuer.try(:name) %></td>
			<td><%= stationery_use.receiver.try(:name) %></td>
			<td><%= stationery_use.quantity %></td>
			<td><%= stationery_use.issuedate? ? stationery_use.issuedate.strftime("%d %b %Y") : "-" %></td>
		</tr>
	<% end %>

</table>
<BR>
</div>

</div>



