<% params[:job_level]= "skt_revision"%>
<H2><%= t 'evaluation.skt_review.title2' %></H2>
<p><i><%= t 'evaluation.skt_review.drop_select' %>&nbsp;&nbsp;
(<font color=red>*</font> <%= t 'evaluation.skt_review.drop_select2' %><b><%= t 'evaluation.skt.performance' %></b> <%=t('and')%> <b><%= t 'evaluation.skt.target' %></b><%= t 'evaluation.skt_review.drop_select3' %></i></p>
<table width=100%>
	<tr>
		<th width=5%><%= t 'evaluation.skt.priority' %></th>
		<th width=15%><%= t 'evaluation.skt.description' %></th>
		<th width=15%><%= t 'evaluation.skt.performance' %></th>
		<th width=15%> <%= t 'evaluation.skt.target' %></th>
		<th width=20%><%=t('evaluation.skt_review.acheivment')%>&nbsp;<font color=red>*</font></th>
		<th width=5%><%=t('evaluation.skt_review.progress')%>&nbsp;<font color=red>*</font></th>
		<th width=20%><%=t('evaluation.skt_review.notes')%></th>
		<th width=5%><%= t 'evaluation.skt_review.drop2' %></th>
	</tr>	
	<% f.fields_for :staff_appraisal_skts do |builder| %>
		<% if builder.object.description.blank? != true && builder.object.half == 1 %>
			<%= render 'staff_appraisal_skt_fields', {:f => builder, :joblevel=>"skt_revision"}%>
		<% end %>
	<% end %>
</table>

<!--Saved additional skts-->
<p><i><%= t 'evaluation.skt_review.add' %></i></p>
<table width=100%>
	<tr>
		<th width=5%><%= t 'evaluation.skt.priority' %></th>
		<th width=15%><%= t 'evaluation.skt.description' %></th>
		<th width=15%><%= t 'evaluation.skt.performance' %></th>
		<th width=15%> <%= t 'evaluation.skt.target' %></th>
		<th width=20%><%=t('evaluation.skt_review.acheivment')%></th>
		<th width=5%><%=t('evaluation.skt_review.progress')%></th>
		<th width=20%><%=t('evaluation.skt_review.notes')%></th>
		<th width=5%><%=t('evaluation.skt_review.cancel')%></th>
	</tr>
	<% f.fields_for :staff_appraisal_skts do |builder| %>
		<% if builder.object.description.blank? != true && builder.object.half == 2 %>
			<%= render 'staff_appraisal_skt_fields', {:f => builder, :joblevel=>"skt_revision"} %>
		<% end %>
	<% end %>
</table>

<p><%= link_to_add_fields image_tag("add.png", :border => 0, :title => 'Add Log'), f, :staff_appraisal_skts %> - <%=t('addmore')%></p>
<BR/>
<p><i><%= t 'evaluation.skt_review.cancel_select' %><br><%= t 'evaluation.skt_review.new_additional' %><br><font color=red><%= t 'evaluation.skt_review.new_additional2' %></font><%= t 'evaluation.skt_review.new_additional3' %></i></p>
<!--SUBMISSION-->
<H2><%= t 'evaluation.skt_review.title3' %></H2>
<table width=100%>
	<tr>
		<td class="leftcol"><%= t 'evaluation.skt_review.pyd_report' %></td>
		<td><%= f.text_area :skt_pyd_report, :size => '70x6' %></td>
		<td>
	</tr>
	<tr>
		<td class="leftcol"><label for="is_skt_submit"><%=t('evaluation.skt_review.submit_ppp_report')%></label></td>
		<td><%= f.check_box :is_skt_pyd_report_done, :id => 'is_skt_pyd_report_done' %>
			<SPAN id="span_skt_pyd_report_on" style="display: none;">
			<%= f.date_select :skt_pyd_report_on, :order => [:day, :month, :year], :default => Date.today %></SPAN></td>
		<td class="pagenote"><%=t('evaluation.skt_review.submit_note')%></td>
	</tr>
</table>

<script type="text/javascript">
	$j(document).ready(function(){
		//show submit date
		$j("input[id='is_skt_pyd_report_done']").change(function() {  
			if($j('#is_skt_pyd_report_done').is(':checked')) { 
				$j("#span_skt_pyd_report_on").show("highlight"); 
			 }else {
				$j("#span_skt_pyd_report_on").hide(""); 
			 }	
		});
		$j("input[id='is_skt_pyd_report_done']").each(function() {  
			 if($j('#is_skt_pyd_report_done').is(':checked')) { 
				$j("#span_skt_pyd_report_on").show("highlight"); 
			 }else {
				$j("#span_skt_pyd_report_on").hide(""); 
			 }	
		});
	});
</script>