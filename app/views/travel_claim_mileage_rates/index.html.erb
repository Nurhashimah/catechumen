<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'mileagerates.title' %></h2>
	</div>
</div>

<div class="toolbar">
	<table style="width:60%;"><tr>
		<td><p><%= link_to image_tag("add.png", :border => 0, :title => (t 'mileagerates.new')) + (t 'mileagerates.new'), new_travel_claim_mileage_rate_path %></p></td>
	</tr></table>
</div>
<BR>
<div class="indextable">
	<table style="width:60%;">
  <tr>
    <th>Km</th>
    <th style="text-align:right;">A</th>
    <th style="text-align:right;">B</th>
    <th style="text-align:right;">C</th>
    <th style="text-align:right;">D</th>
    <th style="text-align:right;">E</th>
		<th colspan=3 class="ac"><%= t 'control' %></th>
  </tr>

	<% @travel_claim_mileage_rates.each do |travel_claim_mileage_rate| %>
  <tr>
    <td><label><%=h travel_claim_mileage_rate.km_low %> km <%=t('to')%> <%=h travel_claim_mileage_rate.km_high %> km</td>
    <td style="text-align:right;"><%=h ringgols (travel_claim_mileage_rate.a_group) %></td>
    <td style="text-align:right;"><%=h ringgols (travel_claim_mileage_rate.b_group) %></td>
    <td style="text-align:right;"><%=h ringgols (travel_claim_mileage_rate.c_group) %></td>
    <td style="text-align:right;"><%=h ringgols (travel_claim_mileage_rate.d_group) %></td>
    <td style="text-align:right;"><%=h ringgols (travel_claim_mileage_rate.e_group) %></td>
    <!--<td width=10px><%= link_to image_tag("document.png",:border => 0), :action => 'show', :id => travel_claim_mileage_rate %></td>-->
		<td width=10px><%= link_to image_tag("edit.png", :border => 0, :title =>(t 'edit')), :action => 'edit', :id => travel_claim_mileage_rate %></td>
	  <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => (t 'delete')), travel_claim_mileage_rate, :confirm => (t 'are_you_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>
<%= link_to (t 'mileagerates.new'), new_travel_claim_mileage_rate_path %>