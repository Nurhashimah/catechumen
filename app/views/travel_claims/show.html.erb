<%= render :partial => 'show_main' %>
<% if (@travel_claim.my_claim_status == t('claim.editing') || @travel_claim.my_claim_status == t('claim.returned')) && !@travel_claim.staff.current_salary.nil? %>
	<%= link_to (t 'edit'), edit_travel_claim_path(@travel_claim) %> |
<% end %>
<% if @travel_claim.my_claim_status == t('claim.for_checking') %>
	<%= link_to (t 'claim.finance_check2'), :controller => 'travel_claims', :action => 'check', :id => @travel_claim.id %> |
<% end %>
<%= link_to (t 'back'), travel_claims_path %>
