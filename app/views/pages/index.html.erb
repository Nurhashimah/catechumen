<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'pages.pages' %></h2>
		<div class="right">
			<% form_tag pages_path, :method => 'get' do %>
			<%= text_field_tag :search, params[:search] %>
			<%= submit_tag I18n.t('search'), :navlabel => nil %>
			<% end %>
		</div>
    </div>
</div>
    <div class="tlist">
  	<table width=100% border="0" cellpadding="0" cellspacing="0">
        <tr>
	        
	        <th><%= t 'pages.position' %></th>
	        <th><%= t 'pages.nav_label' %></th>
          <th><%= t 'name' %></th>
          <th><%= t 'pages.admin' %></th>
          <th><%= t 'pages.redirect' %></th>
          <th colspan=3 class="ac"><%= t 'control' %></th>
        </tr>

        <% @pages.each do |page| %>
        <tr>
	        <td width=5%><%=h page.position %></td>
	        <td><%=h page.navlabel %></td> 
          <td><%=h page.name %></td>
          <td><%=  page.admin? ? (t 'yes2') : (t 'no2') %></td>
          <td><%=  page.redirect? ? (t 'yes2') : (t 'no2') %></td>
		  <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => (t 'show')), :action => 'show', :id => page %></td>
	      <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => (t 'edit')), :action => 'edit', :id => page %></td>
	      <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => (t 'delete')), page, :confirm => (t 'are_you_sure'), :method => :delete %></td>
        </tr>
        <% end %>
</table>

<br />
</div>
<%= link_to (t 'pages.new'), new_page_path %>

</div>