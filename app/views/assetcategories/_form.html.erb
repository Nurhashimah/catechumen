<table width=100%>
	<tr>
		<td class="leftcol"><%= f.label t('assetcategories.parent') %></td>
		<td><%= f.collection_select :parent_id, Assetcategory.find(:all), :id, :description, :include_blank => true %></td>
	</tr>
	<tr>
		<td class="leftcol"><%= f.label t('assetcategories.description') %></td>
		<td><%= f.text_field :description %></td>
	</tr>
	<tr>
		<td class="leftcol"><%= f.label t('assetcategories.category')%></td>
		<td><%= f.select :cattype_id, Assetcategory::ASSETTYPE %></td>
	</tr>
</table> 
