<div class="box">
	<div class="box-head">
		<h2 class="left"><%=t('examanalysis.title')%></h2>
	</div>
</div>
<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => (t 'examanalysis.new')) + (t 'examanalysis.new'), :controller=>"examanalyses",:action=> "new" %></p>
</div><br><br>
<div class="tlist">
	<table width=90% border="0" cellpadding="0" cellspacing="0">
	  <tr>
	    <th><%=t('examanalysis.examtype')%></th>
		<th><%=t('examanalysis.exam_on')%></th>
		<th><%=t('examanalysis.subject_id')%></th>
		<th><%=t('examanalysis.grade')%> A</th>
	    <th><%=t('examanalysis.grade')%> A-</th>
	    <th><%=t('examanalysis.grade')%> B+</th>
	    <th><%=t('examanalysis.grade')%> B</th>
	    <th><%=t('examanalysis.grade')%> B-</th>
	    <th><%=t('examanalysis.grade')%> C+</th>
	    <th><%=t('examanalysis.grade')%> C</th>
	    <th><%=t('examanalysis.grade')%> C-</th>
	    <th><%=t('examanalysis.grade')%> D+</th>
	    <th><%=t('examanalysis.grade')%> D</th>
	    <th><%=t('examanalysis.grade')%> E</th>
		<th colspan=3><%=t('control')%></th>
  	</tr>

<% @examanalyses.each do |examanalysis| %>
  <tr>
    <td><%#=h examanalysis.exammaker_id %><%=h examanalysis.exampaper.render_examtype %>
		<% if examanalysis.exampaper.klass_id==0 %>
			<font color="blue">(Template)</font>
		<% else %>
		<% end %>
	</td>
	<td><%=h l(examanalysis.exampaper.exam_on, :format => "%d %b %Y") %></td>
	<td><%=h examanalysis.exampaper.subject.subject_list %></td>
    <td><%=h examanalysis.gradeA %></td>
    <td><%=h examanalysis.gradeAminus %></td>
    <td><%=h examanalysis.gradeBplus %></td>
    <td><%=h examanalysis.gradeB %></td>
    <td><%=h examanalysis.gradeBminus %></td>
    <td><%=h examanalysis.gradeCplus %></td>
    <td><%=h examanalysis.gradeC %></td>
    <td><%=h examanalysis.gradeCminus %></td>
    <td><%=h examanalysis.gradeDplus %></td>
    <td><%=h examanalysis.gradeD %></td>
    <td><%=h examanalysis.gradeE %></td>
	<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => (t 'show')), :action => 'show', :id => examanalysis %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => (t 'edit')), :action => 'edit', :id => examanalysis %></td>
    <td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => (t 'delete')), examanalysis, :confirm => (t 'are_you_sure'), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
</div>
<%= link_to (t 'examanalysis.new'), :controller=>"examanalyses",:action=> "new" %> | 
<%= link_to (t 'report.download'), examanalyses_path(request.parameters.merge({:format => :xls}))%> | 
<%= link_to (t 'view_pdf'), formatted_examanalyses_path(:pdf), :popup=>true %>
<br/>
