<h3><%=t('staffleave.approval_approving_officer')%></h3>

<% form_for(@leaveforstaff) do |f| %>
  <%= f.error_messages %>

<div class="tform">
	<%= render :partial => 'applyshow' %>
	<table width=100% >
	<tr>
		<td class="leftcol"><label for="replacement_id"><b>Replacement Staff:</b></label></td>
		<td><%=h @leaveforstaff.replacement_id.blank? ? "" : @leaveforstaff.replacement.name %></td>
	</tr>
	</table>
	<H2><%=t('staffleave.approving_leave')%></H2>
	<table>
	<tr>
		<td class="leftcol"><label for="approval1"><b><%=t('staffleave.approval1')%> :</b></label></td>
		<td><%=h @leaveforstaff.approval1? ? (t 'staffleave.supported') : (t 'staffleave.not_supported') %> <%=t('by')%>
			<%=h @leaveforstaff.seconder.name %>&nbsp;(<%=h @leaveforstaff.approval1date.strftime("%d - %b - %Y") %>)</td>
	</tr>

	<tr>
		<td class="leftcol"><label for="approver2"><b><%=t('staffleave.approver2')%> :</b></label></td>
		<td><%= f.radio_button :approver2,'true' %><%=t('staffleave.approved')%> &nbsp; <%= f.radio_button :approver2,'false' %><%=t('staffleave.not_approved')%></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="approval2date"><b><%=t('staffleave.approval2date')%> :</b></label></td>
		<td><%= f.date_select :approval2date, :order => [:day, :month, :year], :default => DateTime.now %></td>
	</tr>
</table>
</div>

<p>
<%= f.submit (t 'update') %>
</p>

<% end %>


<%= link_to (t 'show'), @leaveforstaff %> |
<%= link_to (t 'back'), leaveforstaffs_path %>