<%#=render :partial => 'exams/position_dept' %>

<div class="box">
	<div class="box-head">
		<h2 class="left"><%=t('examresult.title')%></h2>
	</div>
</div>
	
<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => (t 'examresult.new')) + (t 'examresult.new'), new_examresult_path %></p>
</div><BR><BR>
<div class="tlist">
	<table width=90% border="0" cellpadding="0" cellspacing="0">
	  <tr>
		<th><%=t('examresult.examdate1')%></th>
		<th><%=t('examresult.examdate2')%></th>
		<th><%=t('examresult.semester')%></th>
    	<th><%=t('examresult.programme_id')%></th>
    	<th colspan=3><%=t('control')%></th>
  	</tr>

<% @examresults.each do |examresult| %>
	<%# if (examresult.programmestudent.name == @dept_unit) ||(@current_login_roles.include?(2))||@kupk == "yes"%>
  		<tr>
			<td><%=h examresult.examdts %></td>
			<td><%=h examresult.examdte %></td>
    		<td><%=h examresult.render_semester %></td>
    		<td><%=h examresult.programmestudent.name %></td>
			<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => (t 'show')), :action => 'show', :id => examresult %></td>
    		<td width=10px><%= link_to image_tag("edit.png", :border => 0, :title => (t 'edit')), :action => 'edit', :id => examresult %></td>
    		<td width=10px><%= link_to image_tag("delete.png", :border => 0, :title => (t 'delete')), examresult, :confirm => (t 'are_you_sure'), :method => :delete %></td>
  		</tr>
	<%# end %>
<% end %>
</table>

<br />
</div>
<%= link_to (t 'examresult.new'), new_examresult_path %>
