<div class="tform">
<H2><%=t('programme.title')%></H2>
<fieldset>
	<legend class='togvis'><%=t('programme.title')%> : <%=@programme.course_type%></legend>
		<table width=85% >
			<tr>
				<td class="leftcol"><label><%=t('programme.combo_code')%></label></td>
				<td><%=h @programme.combo_code %></td>
			</tr>
			<tr>
				<td class="leftcol"><label><%=t('programme.name')%></label></td>
				<td><%=h @programme.root.course_type %> <%=h @programme.root.name %> - <%=h @programme.course_type %> <%=h @programme.name %></td>				
			</tr>
			<% unless @programme.root==nil %>
				<tr>
					<td class="leftcol"><label><%=t('programme.subject_abbreviation')%></label></td>
				<td><%=h @programme.subject_abbreviation %></td>
			</tr>
			<% end %>
		</table>
</fieldset>
</div>
<% permitted_to? :update, :programmes do %>
	<%= link_to t('edit'), edit_programme_path(@programme) %> |
<% end %>
<%= link_to t('back'), programmes_path %>