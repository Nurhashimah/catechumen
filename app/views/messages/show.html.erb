<div class="tform">
	<H2><%= t 'messages.message_details' %></H2>
  <table width=100% >

	<tr>
		<td class="leftcol"><label for="from_id"><%= t 'document.from' %>:</label></td>
	    <td><%=h @message.message_from_name  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="to_id"><%= t 'messages.to' %> :</label></td>
		<td><% for message_staffs in @message.staffs %>
				<%=h message_staffs.name %><br>
		<% end %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="message"><%= t 'messages.message' %>:</label></td>
		<td><%=h @message.message %></td>
	</tr>
	
</table>
<BR>
</div>
<%= link_to (t 'edit'), edit_message_path(@message) %> |
<%= link_to (t 'back'), messages_path %>