<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'messages.title' %></h2>
	</div>
</div>


<div class="indextable">
	<div class="toolbar">
		<p><%= link_to image_tag("add.png", :border => 0, :title =>  (t 'messages.new')) + (t 'messages.new'), new_message_path %></p>
	</div><br/>
	
	<h3><%= t 'messages.message_for_me' %></h3>
	<table>
		<tr>
			<th><%= t 'document.from' %></th>
			<th><%= t 'messages.received' %></th>
			<th><%= t 'messages.message' %></th>
			<th>CC</th>
			<th colspan=1 class="ac"><%= t 'control' %></th>
		</tr>

		<% @tome.each do |message| %>
		<tr>
			<td><%=h message.from.name   %></td>
			<td><%=h l(message.created_at)  %></td>
			<td><%=h message.message %></td>
			<td>
				<% for message_staffs in message.staffs %>
						<% if message_staffs.id == Login.current_login.staff_id%>
						<% else %>
							<%=h message_staffs.name %><br/>
						<% end %>
				<% end %></td>
	    
			<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => (t 'show')), :action => 'show', :id => message %></td>
			<!--<td width=10px><#%= link_to image_tag("edit.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => message %></td>
			<td width=10px><#%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), message, :confirm => 'Are you sure?', :method => :delete %></td>-->
		</tr>
		<% end %>
	</table>
	<BR/><BR/><BR/>
  <h3><%= t 'messages.sent_messages' %></h3>
	<table>
		<tr>
			<th><%= t 'messages.to_whom' %></th>
			<th><%=t 'messages.sent' %></th>
			<th><%= t 'messages.message' %></th>
			<th colspan=3 class="ac"><%= t 'control' %></th>
		</tr>

		<% @sentmessages.each do |message| %>
		<tr>
			<td>
				<% for message_staffs in message.staffs %>
						<%=h message_staffs.name %><br>
				<% end %></td>
			<td><%=h l(message.created_at) %>
	    <td><%=h message.message %></td>
			<td width=10px><%= link_to image_tag("document.png", :border => 0, :title => (t 'show')), :action => 'show', :id => message %></td>
			<td width=10px><%= link_to image_tag("edit.png",     :border => 0, :title => (t 'edit')), :action => 'edit', :id => message %></td>
			<td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => (t 'delete')), message, :confirm => (t 'are_you_sure'), :method => :delete %></td>
		</tr>
		<% end %>
	</table>
