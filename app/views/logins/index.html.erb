<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left"><%= t 'login.list' %></h2>
	</div>
</div>
<div class="toolbar">
	<p><%= link_to image_tag("add.png", :border => 0, :title => 'New Course')+ (t 'new'),  new_login_path  %></p>
</div>
<BR><BR>
<div class="indextable">
	<table>
		<tr>
			<th colspan=2><% link_to image_tag("money_add.png", :border => 0, :title => 'Enter New Budget') + "New Budget", new_ptbudget_path %></th>
			<th colspan=5><div class="right"><%= select_tag_for_filter("logins", @filters, params) %></th>
		</tr>
		<tr>
			<th><%= t 'name' %></th>
    	<th><%= t 'login.login' %></th>
    	<th><%= t 'student.semail' %></th>
			<th colspan=4 class="ac"> <%= t 'control' %></th>
  	</tr>
		<% @logins.each do |login| %>
	  <tr>
			<td><%=h login.login_nama %></td>
	    <td><%=h login.login %></td>
	    <td><%=h login.email %></td>
	    <td width=10px>
						<% if login.staff_id == nil && login.student_id == nil -%>
							<%= link_to image_tag("accept.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => login %>
						<% end -%></td>
	    <td width=10px><%= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => login %></td>
	    <td width=10px><%= link_to image_tag("edit.png",     :border => 0, :title => 'Edit'), :action => 'edit', :id => login %></td>
	    <td width=10px><%= link_to image_tag("delete.png",   :border => 0, :title => 'Delete'), login_path, :confirm => "Are you sure you want to delete #{login.login_nama}?", :method => :delete %></td>
	  </tr>
	<% end %>
	</table>
</div>
<br />
<%= link_to (t 'login.newlogin'), new_login_path %>
