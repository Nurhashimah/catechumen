	</tr>
	
	
	
	
	

	
	<td><% for role in @login.roles %></td>
	

	<tr>
		<td class="leftcol"><label for="name"><b><%= t 'login.role_name' %>:</b></label></td>
		<td> <%=h role.name %></td>
	</tr>
	
		<% end %>


</table>		
</div>


