<div class="tform">
  <table width=100% >
	
	
<!--Login Info-->
	<tr>
		<th colspan = 2><%= t 'login.login_details' %></th>
	</tr>	
	<tr>
		<td class="leftcol"><label for="login"><%= t 'login.login' %>: </label></td>
		<td><%=h @login.login %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="email"><%= t 'student.semail' %>: </label></td>
		<td><%=h @login.email %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="person"><%= t 'login.person' %>: </label></td>
		<!--<td><#%=h @login.isstaff? ? @login.staff.mykad_with_staff_name : @login.student.formatted_mykad_and_student_name %>-->
