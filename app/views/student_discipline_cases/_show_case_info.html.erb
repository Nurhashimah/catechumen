<fieldset>
	<legend class='togvis'><%= t 'studentdiscipline.case_info' %>: (<%=h @student_discipline_case.render_status %>)</legend>
		<table width=100%>
			<tr>
				<td class="leftcol"><label for="casedt"><b><%= t 'datelabel' %>:</b></label></td>
				<td><%=h l(@student_discipline_case.case_created_on) unless @student_discipline_case.case_created_on.blank? %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="cofile_id"><b><%= t 'studentdiscipline.file_id' %>:</b></label></td>
				<td><%=h @student_discipline_case.file_id.blank? ? t('not_assigned') : @student_discipline_case.cofile.file_no_and_name %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="investigation"><b><%= t 'studentdiscipline.investigation_notes' %>:</b></label></td>
				<td><%=h @student_discipline_case.investigation_notes %></td>
			</tr>
	
			<tr>
				<td class="leftcol"><label for="investigation"><%= t 'studentdiscipline.action_type' %>:</label></td>
				<td>
					<% unless @student_discipline_case.action_type.blank? %>
						<%=h t('studentdiscipline.refer_bpl') if @student_discipline_case.action_type=="Ref to BPL" %>
						<%=h t('studentdiscipline.refer_tphep') if @student_discipline_case.action_type=="Ref TPHEP" %>
						<%=h t('studentdiscipline.no_case') if @student_discipline_case.action_type=="no_case" %>
						<%=h t('studentdiscipline.advise') if @student_discipline_case.action_type=="advise" %>
					<%end %>
					<%#=h @student_discipline_case.action_type.titleize unless @student_discipline_case.action_type.blank? %>
				</td>
			</tr>
	
			<% if @student_discipline_case.action_type == "no_case" %>
			<tr>
				<td class="leftcol"><label for="investigation"><%= t 'studentdiscipline.closed_at_college_on' %>:</label></td>
				<td><%=h l(@student_discipline_case.closed_at_college_on) unless @student_discipline_case.closed_at_college_on.blank? %></td>
			</tr>
			<% end -%>
	
			<% if @student_discipline_case.action_type == "advise" %>
			<tr>
				<td class="leftcol"><label for="investigation"><%= t 'studentdiscipline.other_info' %>:</label></td>
				<td><%=h @student_discipline_case.other_info %></td>
			</tr>
			<% end -%>
			
		
			<% if @student_discipline_case.action_type == "counseling" %>
			<tr>
				<td class="leftcol"><%= t 'studentdiscipline.session_details' %></td>
				<td>
					<!---->
					<table>
						<tr>
							<th>No</th>
							<th><%= t 'studentdiscipline.dtrequest' %></th>	
							<th><%= t 'claim.confirmed_date' %> </th>
							<th><%= t 'studentdiscipline.counselor_feedback' %></th>
							<th><%= t 'studentdiscipline.session_notes' %></th>
						</tr>
						<%count=0%>
						<% for student_counseling_session in @student_discipline_case.student_counseling_sessions %>
						<tr>
							<td><%= count+=1%> </td>
							<td><%=h student_counseling_session.requested_at.try(:strftime, "%d %b %y, %l:%M %p")  %></td>
							<td><%=h student_counseling_session.confirmed_at.try(:strftime, "%d %b %y, %l:%M %p")  if student_counseling_session.is_confirmed == true%></td>
							<td><%=h student_counseling_session.remark %></td> 
							<td><%= (link_to "view", :action => 'show', :controller=> 'student_counseling_sessions',:id => student_counseling_session.id) if !student_counseling_session.remark.blank? %></td>
						</tr>
						<% end -%>
					</table>
					<!---->
				</td>
			</tr>
			<tr>
				<td class="leftcol"><%= t 'studentdiscipline.summary_finalfeedback' %></td>
				<td>&nbsp;&nbsp;&nbsp;<%= @student_discipline_case.counselor_feedback %></td>
			</tr>
			<% end -%>
			
			<% if @student_discipline_case.action_type == "Ref TPHEP" %>
			<tr>
				<td class="leftcol"><label for="investigation"><%= t 'studentdiscipline.assigned2_to' %>:</label></td>
				<td><%=h @student_discipline_case.tphep.name %> <%=t('on2')%> <%=h @student_discipline_case.assigned2_on.blank? ? "" :  l(@student_discipline_case.assigned2_on) %></td>
			</tr>
			<% end -%>
		</table>
</fieldset>