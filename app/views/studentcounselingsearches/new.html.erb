<div class="tform">
	<H2><%=t('equery.student_counseling.search')%></H2>

<% form_for @studentcounselingsearch do |f| %>
  <%= f.error_messages %>
  	<% if @searchstudentcounselingtype=='1' || @searchstudentcounselingtype==1 %>
		<%= hidden_field_tag :method,  1 %>
		
		<table width=100% >
			<tr><td colspan=2><%=t('equery.student_counseling.search_by')%> :</td></tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label (t 'student.matrixno') %></td>
				<td><%= f.text_field :matrixno %></td>
			</tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%= f.label (t 'student.name') %></td>
				<td><%= f.text_field :name %></td>
			</tr>
			<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%=f.label (t 'studentcounseling.confirmed_at')%>:</td>
				<td>
					<!--<%#= date_select :confirmed_at_start, params[: :include_blank => :true confirmed_at_start], :include_blank => :true %> - 
					<%#= date_select :confirmed_at_end, params[:confirmed_at_end],%>-->
					<%= f.date_select :confirmed_at_start,  :include_blank => :true %> - 
					<%= f.date_select :confirmed_at_end,  :include_blank => :true  %>
					<!--by default - confirmed_at_start & confirmed_at_end value are : dd-mm-yyyy 00:00, refer model - add 24hours & deduct by 8hours,
					if user select [from :30 dec2012 to :30dec2012] - then search result will be within 30dec12 00:00 upto 31dec12 00:00-->
				</td>
			</tr>
			<%=f.hidden_field :is_confirmed, :value=>true%>
			<!--
    		<tr>
				<td class="leftcol">&nbsp;&nbsp;&nbsp;<%#= f.label :case_reference_no %> <br>&nbsp;&nbsp;&nbsp;(Student Discipline Case Id)</td>
				<td><%#= f.text_field :case_id %></td>
			</tr>-->
		</table>
	<% end %>
  <p><%= f.submit (t 'search') %>&nbsp;<font size=-2><%=t('equery.leaves_all_blank_all_records')%></font></p>

  <br><br>
<% end %>

</div>


